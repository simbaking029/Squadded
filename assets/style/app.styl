
html
	overflow-y unset !important
.v-application--wrap
	max-height 100vh
	.v-application--wrap
		min-height unset
.v-content
	padding-bottom 65px !important
	max-height 100%
.v-content__wrap
	overflow auto
	flex-direction column
.v-content.flex .v-content__wrap,
.container.flex
		display flex
		flex-direction column
.container.layout-padding
	padding 0
	.layout
		padding 12px

body
	font-size 16px

	.v-application
		a
			color #D0021B
			text-decoration none
		.v-tab
			text-transform capitalize


		&.normal
			color inherit

button
	display inline-flex

.v-application .theme--light,
#app.theme--light.v-application
	background-color white

.full-width
	width 100%
	margin-left 0
	margin-right 0

.grid
	display grid

.poll-item
	.v-responsive__content
		width auto !important
	.card_bottom
		padding 8px
